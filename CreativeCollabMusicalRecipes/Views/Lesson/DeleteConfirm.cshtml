@model CreativeCollabMusicalRecipes.Models.LessonDto

@{
    ViewBag.Title = "DeleteConfirm";
}
@*confirm delete using the ID*@
<h2>Are you sure you want to delete this Lesson?</h2>
<h3>Lesson Name:</h3>
<p>@Model.LessonName </p>
<h3>Instructor Name:</h3>
<p> @Model.FirstName @Model.LastName</p>

<form action="/Lesson/Delete/@Model.LessonID" method="POST">
    <p class="fw-bold">This Action cannot be undone</p>
    <input class="btn btn-danger" type="submit" value="Confirm Delete" />
    <a href="@Url.Action("List", "Lesson")" class="btn btn-secondary">Back to List</a>
</form>