@model IEnumerable<CreativeCollabMusicalRecipes.Models.RecipeDto>
@{
    ViewBag.Title = "Create";
}
@*create new lesson*@
<h2 class="text-center">Create Lesson</h2>
<div class="container">
    <form action="/Lesson/Create" method="Post" class="mx-auto col-md-6">
        <div class="form-group">
            <label>Lesson Name</label>
            <input type="text" name="LessonName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Start Date</label>
            <input type="datetime-local" name="StartDate" class="form-control" />
        </div>
        <div class="form-group">
            <label>End Date</label>
            <input type="datetime-local" name="EndDate" class="form-control" />
        </div>
        <div class="form-group">
            <label>Instructor Id</label>
            <input type="number" name="InstructorId" class="form-control" />
        </div>
        <div class="form-group">
            <label>Type</label>
            <select id="lessonType" name="Type" class="form-control">
                <option value="Lesson">Music Lesson</option>
                <option value="Recipe">Recipe Lesson</option>
            </select>
        </div>
        <div class="form-group mt-2" id="recipeDropdown" style="display: none;">
            <label>Select Recipe</label>
            <select name="RecipeId" class="form-control">
                <option value="NULL">-- Select a Recipe --</option>
                @foreach (var recipe in Model)
                {
                    <option value="@recipe.RecipeId">@recipe.Title</option>
                }
            </select>
        </div>
        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary mr-2">Add Lesson</button>
            <a href="/Lesson/List" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

<script>
    document.getElementById('lessonType').addEventListener('change', function () {
        var recipeDropdown = document.getElementById('recipeDropdown');
        if (this.value === 'Recipe') {
            recipeDropdown.style.display = 'block';
        } else {
            recipeDropdown.style.display = 'none';
        }
    });
</script>
