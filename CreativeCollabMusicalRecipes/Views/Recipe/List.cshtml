@model IEnumerable<CreativeCollabMusicalRecipes.Models.RecipeDto>

@{
    ViewBag.Title = "List";
}
<div class="container mt-5">
    <div class="row mb-3">
        <div class="col-md-12">
            <h1>Recipe List</h1>
            <a href="/Recipe/New" class="btn btn-primary mt-3">+ Add new Recipe</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Recipe Name</th>
                        <th>Category</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var recipe in Model)
                    {
                        <tr>
                            <td><a href="/Recipe/Show/@recipe.RecipeId"> @recipe.Title </a></td>
                            <td>@recipe.Category</td>
                            <td>
                                <a href="/Recipe/Edit/@recipe.RecipeId" class="btn btn-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </td>
                            <td>
                                <a href="/Recipe/DeleteConfirm/@recipe.RecipeId" class="btn btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>