@model CreativeCollabMusicalRecipes.Models.AcademyDto
@{
    ViewBag.Title = "Edit Instructor";
}

<h2 class="text-center">Edit Academy</h2>

<div class="d-flex justify-content-center align-content-center" >

    @*Editing Instructor information*@
    <form action="/Academy/Update/@Model.AcademyId" method="post">

        <input type="hidden" name="AcademyId" value="@Model.AcademyId" />

        <div class="form-group">
            <label for="AcademyName">Academy Name</label>
            <input type="text" class="form-control" id="AcademyName" name="AcademyName" value="@Model.AcademyName" required />
        </div>

        <div class="form-group">
            <label for="AcademyAddress">Academy Address</label>
            <input type="text" class="form-control" id="AcademyAddress" name="AcademyAddress" value="@Model.AcademyAddress" required />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save Academy</button>
            <a href="/Academy/List" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>