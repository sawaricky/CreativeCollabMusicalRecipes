@model CreativeCollabMusicalRecipes.Models.AcademyDto
@{
    ViewBag.Title = "Academy Details";
}
<h2 class="text-center">Academy Details</h2>
@*instructor details information *@
<div class="d-flex justify-content-center align-content-center">

    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body">
                <P><span class="fw-bold"> Academy Name:</span> @Model.AcademyName</P>
                <p><span class="fw-bold">Academy Address:</span> @Model.AcademyAddress</p>
            </div>
        </div>
        <div class="justify-content-center align-content-center">
            <a href="@Url.Action("List", "Academy")" class="btn btn-secondary">Go back to instructor List</a>
            <a href="@Url.Action("Edit", new { id = Model.AcademyId })" class="btn btn-primary">Edit</a>
            <a href="@Url.Action("DeleteConfirm", new { id = Model.AcademyId })" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>


