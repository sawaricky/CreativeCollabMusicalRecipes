@{
    ViewBag.Title = "New Academy";
}

<h2 class="text-center">Create Academy</h2>
<div class="container">
    <form action="/Academy/Create" method="Post" class="col-md-6 mx-auto">
        <div class="form-group">
            <label>Academy Name</label>
            <input type="text" name="AcademyName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Academy Address</label>
            <input type="text" name="AcademyAddress" class="form-control" />
        </div>
        <div class="form-group mt-4">
            <button class="btn btn-primary" type="submit">Add Academy</button>
            <a href="/Academy/List" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
